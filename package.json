{
  "name": "Earthcal",
  "version": "0.7.9",
  "description": "Sync your cycles with Earth",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "package": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/russs95/earthcalendar.git"
  },
  "keywords": [
    "calendar",
    "cycles",
    "events",
    "to-do",
    "tasks",
    "time",
    "management"
  ],
  "author": "Russell Maier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/russs95/earthcalendar/issues"
  },
  "homepage": "https://github.com/russs95/earthcalendar#readme",
  "devDependencies": {
    "electron": "^32.1.0",
    "electron-builder": "^25.0.5",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.example.earthcal",
    "productName": "EarthCal",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/*.{o,hprof,orig,pyc,pyo,rbc}",
      "!*.{iml}"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "category": "Utility"
    },
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources",
        "filter": ["**/*"]
      }
    ]
  }
}
